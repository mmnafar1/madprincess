script/source = "extends CharacterBody2D

@onready var anim: AnimatedSprite2D = $AnimatedSprite2D
@onready var nav_agent = $NavigationAgent2D
var no_run = false
# Order corresponds to angle sectors starting at +X (right) going CCW
var _dir_names := [
	\"E\",
	\"NE\",
	\"N\",
	\"NW\",
	\"W\",
	\"SW\",
	\"S\",
	\"SE\"
]

var player
var target_position
# Called every frame. 'delta' is the elapsed time since the previous frame.
func _ready() -> void:
	$Timer.wait_time = Config.MONSTER_WAIT_TIME
	$Timer.start()
	$Timer.timeout.connect(_on_timer_timeout)
	player = $\"../../Player/Player\"
	target_position = player.global_position
	
	#DEEEZ TEST:
	#nav_agent.navigation_finished(_on_nav_finished)
	#nav_agent.velocity_computed(_on_navigation_agent_2d_velocity_computed)
	nav_agent.target_position = target_position
	#_make_path()
func _on_nav_finished():
	pass
func _on_navigation_agent_2d_velocity_computed(safe_velocity):
	velocity = velocity.move_toward(safe_velocity,100)
	move_and_slide()
	
	
	
func _on_timer_timeout() -> void:
	if player:
		target_position = player.global_position
	nav_agent.target_position = target_position

func _physics_process(delta: float) -> void:
	if no_run:
		return

	#DEEEZ TEST:
	var next_path_pos = nav_agent.get_next_path_position()
	var direction = global_position.direction_to(next_path_pos)
	var new_velocity = direction * Config.MONSTERSPEED * delta * 80
	nav_agent.velocity = new_velocity
	_update_animation(direction)
	#var direction = (target_position - global_position).normalized()
	#velocity = direction * Config.MONSTERSPEED * delta * 80
	#move_and_slide()
	#_update_animation((target_position - global_position).normalized())
func _is_killed():
	no_run = true
	_play_once('bubbled')
	


func _update_animation(direction: Vector2) -> void:
	if direction.length() > Config.DEADZONE:
		# Convert to angle [0..2Ï€) and quantize into 8 sectors
		var angle := atan2(-direction.y, direction.x)  # screen Y+ is down; negate to make up positive
		if angle < 0.0:
			angle += TAU
		var sector := int(roundi(angle / (PI / 4.0))) % 8
		var name = _dir_names[sector]
		_play_once(\"Walk_\" + name)
	else:
		#var idle_name = \"Idle_\" + _dir_names[_last_dir_idx]
		#_play_once(idle_name)
		print(\"Error\")

func _play_once(target: String) -> void:
	if anim.animation != target:
		anim.play(target)
		#print('anime played', target)
func _drop(zz):
	no_run = true
	get_parent().z_index = zz
	for i in range(10):
		
		get_parent().position += Vector2(0,10)
		await get_tree().create_timer(0.1).timeout
	get_parent().queue_free()


func _on_animated_sprite_2d_animation_finished() -> void:
	if(no_run):
		print('anim tamam --------------------------------')
		$\"..\".queue_free()
"

